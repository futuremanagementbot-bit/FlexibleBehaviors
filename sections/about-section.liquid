<!-- About / Mission Section -->
<section class="section section--white" aria-label="About Flexible Behaviors">
  <div class="container">
    <div class="about-split">

      <!-- Image -->
      <div class="about-split__image fade-in-up">
        {%- if section.settings.image -%}
          <img
            src="{{ section.settings.image | image_url: width: 800 }}"
            alt="{{ section.settings.image_alt | default: 'The Flexible Behaviors team and community' | escape }}"
            width="800"
            height="600"
            loading="lazy"
          >
        {%- else -%}
          <div class="skeleton skeleton--image" style="aspect-ratio: 4/3;"></div>
        {%- endif -%}
      </div>

      <!-- Content -->
      <div class="about-split__content fade-in-up" data-delay="2">
        <h2>{{ section.settings.heading | default: 'Why Flexible Behaviors?' }}</h2>
        <p>
          {{ section.settings.body | default: "We named this brand 'Flexible' for a reason. Real progress doesn't come from rigid plans or perfect days — it comes from meeting the moment, holding onto what matters most, and taking the next step. We build tools for that kind of work. Affordable, practical, and designed to move with you — not against you." }}
        </p>
        {%- if section.settings.cta_text != blank -%}
          <a href="{{ section.settings.cta_link | default: '/pages/about' }}" class="btn btn-secondary">
            {{ section.settings.cta_text | default: 'Read Our Story' }}
          </a>
        {%- endif -%}
      </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "About / Mission",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Section image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "The Flexible Behaviors team and community"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Why Flexible Behaviors?"
    },
    {
      "type": "richtext",
      "id": "body",
      "label": "Body text",
      "default": "<p>We named this brand 'Flexible' for a reason. Real progress doesn't come from rigid plans or perfect days — it comes from meeting the moment, holding onto what matters most, and taking the next step. We build tools for that kind of work. Affordable, practical, and designed to move with you — not against you.</p>"
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Read Our Story"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "/pages/about"
    }
  ],
  "presets": [
    {
      "name": "About / Mission"
    }
  ]
}
{% endschema %}
