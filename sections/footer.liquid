<!-- Footer Section -->
<footer class="site-footer" role="contentinfo">
  <div class="container">
    <div class="footer-grid">

      <!-- Column 1: Shop -->
      <div class="footer-column">
        <h4 class="footer-column__title">Shop</h4>
        <ul class="footer-column__list">
          <li><a href="/collections">All Products</a></li>
          <li><a href="/collections/visual-supports-printables">Visual Supports</a></li>
          <li><a href="/collections/token-boards-reinforcement">Token Boards</a></li>
          <li><a href="/collections/sensory-tools-fidgets">Sensory Tools</a></li>
          <li><a href="/collections/data-collection-provider-tools">Provider Tools</a></li>
          <li><a href="/collections/kits-bundles">Kits & Bundles</a></li>
        </ul>
      </div>

      <!-- Column 2: Help -->
      <div class="footer-column">
        <h4 class="footer-column__title">Help</h4>
        <ul class="footer-column__list">
          <li><a href="/pages/faq">FAQ</a></li>
          <li><a href="/policies/shipping-policy">Shipping Policy</a></li>
          <li><a href="/policies/refund-policy">Returns</a></li>
          <li><a href="/policies/privacy-policy">Privacy Policy</a></li>
          <li><a href="/policies/terms-of-service">Terms of Service</a></li>
        </ul>
      </div>

      <!-- Column 3: Connect -->
      <div class="footer-column">
        <h4 class="footer-column__title">Connect</h4>
        <ul class="footer-column__list">
          <li><a href="/pages/about">About Us</a></li>
          <li><a href="/pages/contact">Contact</a></li>
          <li><a href="/blogs/resources">Blog</a></li>
          {%- if section.settings.instagram_url != blank -%}
            <li><a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer">Instagram</a></li>
          {%- endif -%}
          {%- if section.settings.facebook_url != blank -%}
            <li><a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer">Facebook</a></li>
          {%- endif -%}
        </ul>
      </div>

    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p class="footer-bottom__tagline">Tools for every milestone. Support for every journey.</p>

      <div class="footer-bottom__social" aria-label="Social media links">
        {%- if section.settings.instagram_url != blank -%}
          <a href="{{ section.settings.instagram_url }}" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Instagram">
            {% render 'icon', name: 'instagram' %}
          </a>
        {%- endif -%}
        {%- if section.settings.facebook_url != blank -%}
          <a href="{{ section.settings.facebook_url }}" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Facebook">
            {% render 'icon', name: 'facebook' %}
          </a>
        {%- endif -%}
        {%- if section.settings.pinterest_url != blank -%}
          <a href="{{ section.settings.pinterest_url }}" target="_blank" rel="noopener noreferrer" aria-label="Follow us on Pinterest">
            {% render 'icon', name: 'pinterest' %}
          </a>
        {%- endif -%}
        <a href="mailto:{{ section.settings.email | default: 'hello@flexiblebehaviors.com' }}" aria-label="Email us">
          {% render 'icon', name: 'mail' %}
        </a>
      </div>

      <p class="footer-bottom__copy">
        &copy; {{ 'now' | date: '%Y' }} {{ shop.name | default: 'Flexible Behaviors' }}. All rights reserved.
      </p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "url",
      "id": "facebook_url",
      "label": "Facebook URL"
    },
    {
      "type": "url",
      "id": "pinterest_url",
      "label": "Pinterest URL"
    },
    {
      "type": "text",
      "id": "email",
      "label": "Contact email",
      "default": "hello@flexiblebehaviors.com"
    }
  ]
}
{% endschema %}
