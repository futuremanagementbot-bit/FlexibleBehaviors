<!-- Hero Banner Section -->
<section class="hero" aria-label="Hero banner">
  {%- if section.settings.image -%}
    <img
      class="hero__image"
      src="{{ section.settings.image | image_url: width: 1920 }}"
      alt="{{ section.settings.image_alt | default: 'Flexible Behaviors â€” warm lifestyle photo' | escape }}"
      width="1920"
      height="1080"
      loading="eager"
      fetchpriority="high"
    >
  {%- endif -%}

  <div class="hero__overlay" aria-hidden="true"></div>

  <div class="hero__content">
    <h1 class="hero__title">
      {{ section.settings.heading | default: 'Tools for every milestone.' }}
    </h1>
    <p class="hero__subtitle">
      {{ section.settings.subheading | default: 'Affordable, practical support for parents and providers who show up every day.' }}
    </p>
    <a href="{{ section.settings.cta_link | default: '/collections' }}" class="btn btn-primary">
      {{ section.settings.cta_text | default: 'Explore Our Tools' }}
    </a>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "image_alt",
      "label": "Image alt text",
      "default": "Warm lifestyle photo showing tools for the special needs community"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Tools for every milestone."
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "Subheading",
      "default": "Affordable, practical support for parents and providers who show up every day."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Explore Our Tools"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "/collections"
    }
  ],
  "presets": [
    {
      "name": "Hero Banner"
    }
  ]
}
{% endschema %}
