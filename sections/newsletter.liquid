<!-- Newsletter Signup Section -->
<section class="section section--dark" aria-label="Newsletter signup">
  <div class="container text-center">
    <div class="fade-in-up">
      <h2>{{ section.settings.heading | default: 'Join the Toolkit' }}</h2>
      <p style="max-width: 50ch; margin: var(--space-xs) auto var(--space-lg);">
        {{ section.settings.body | default: 'Get free resources, new product drops, and practical tips delivered to your inbox. Plus 10% off your first order.' }}
      </p>

      {%- form 'customer', id: 'newsletter-form' -%}
        <input type="hidden" name="contact[tags]" value="newsletter">

        <div class="newsletter-form">
          <div class="form-group" style="flex: 1;">
            <label for="newsletter-email" class="form-label--sr-only">Email address</label>
            <input
              type="email"
              id="newsletter-email"
              name="contact[email]"
              class="form-input"
              placeholder="your@email.com"
              autocomplete="email"
              required
              aria-label="Email address"
            >
          </div>
          <button type="submit" class="btn btn-cta">
            {{ section.settings.cta_text | default: 'Join Us' }}
          </button>
        </div>
      {%- endform -%}

      <p class="newsletter__fine-print">
        {{ section.settings.fine_print | default: 'We respect your inbox. Unsubscribe anytime.' }}
      </p>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Newsletter Signup",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Join the Toolkit"
    },
    {
      "type": "textarea",
      "id": "body",
      "label": "Body text",
      "default": "Get free resources, new product drops, and practical tips delivered to your inbox. Plus 10% off your first order."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "Join Us"
    },
    {
      "type": "text",
      "id": "fine_print",
      "label": "Fine print",
      "default": "We respect your inbox. Unsubscribe anytime."
    }
  ],
  "presets": [
    {
      "name": "Newsletter Signup"
    }
  ]
}
{% endschema %}
