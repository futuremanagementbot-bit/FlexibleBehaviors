<!-- Contact Page Template -->
<section class="section section--cream">
  <div class="container">
    <div class="section-header fade-in-up">
      <h1>{{ page.title | default: 'Get in Touch' }}</h1>
      <p>Have a question, suggestion, or just want to say hello? We'd love to hear from you.</p>
    </div>

    <div class="about-split" style="gap: var(--space-xl); align-items: start;">

      <!-- Contact Form -->
      <div class="fade-in-up">
        {%- form 'contact', id: 'contact-form' -%}
          {%- if form.posted_successfully? -%}
            <div style="background: var(--color-soft-fern); color: var(--color-deep-forest); padding: var(--space-md); border-radius: var(--radius-sm); margin-bottom: var(--space-md); font-weight: 600;">
              {% render 'icon', name: 'check' %}
              Thank you for reaching out! We'll get back to you soon.
            </div>
          {%- endif -%}

          {%- if form.errors -%}
            <div style="background: var(--color-terracotta); color: var(--color-cream); padding: var(--space-md); border-radius: var(--radius-sm); margin-bottom: var(--space-md);">
              {{ form.errors | default_errors }}
            </div>
          {%- endif -%}

          <div class="form-group mb-md">
            <label for="contact-name" class="form-label">Name</label>
            <input
              type="text"
              id="contact-name"
              name="contact[name]"
              class="form-input"
              placeholder="Your name"
              autocomplete="name"
              required
            >
          </div>

          <div class="form-group mb-md">
            <label for="contact-email" class="form-label">Email</label>
            <input
              type="email"
              id="contact-email"
              name="contact[email]"
              class="form-input"
              placeholder="your@email.com"
              autocomplete="email"
              required
            >
          </div>

          <div class="form-group mb-md">
            <label for="contact-subject" class="form-label">Subject</label>
            <select id="contact-subject" name="contact[subject]" class="form-input" autocomplete="off">
              <option value="General Question">General Question</option>
              <option value="Order Inquiry">Order Inquiry</option>
              <option value="Bulk / School Pricing">Bulk / School Pricing</option>
              <option value="Product Suggestion">Product Suggestion</option>
              <option value="Other">Other</option>
            </select>
          </div>

          <div class="form-group mb-md">
            <label for="contact-message" class="form-label">Message</label>
            <textarea
              id="contact-message"
              name="contact[body]"
              class="form-input"
              rows="6"
              placeholder="How can we help?"
              required
              style="resize: vertical;"
            ></textarea>
          </div>

          <button type="submit" class="btn btn-primary" style="width: 100%;">
            Send Message
          </button>
        {%- endform -%}
      </div>

      <!-- Contact Info -->
      <div class="fade-in-up" data-delay="2">
        <div style="background: var(--color-soft-white); border-radius: var(--radius-md); padding: var(--space-lg); box-shadow: var(--shadow-sm);">
          <h3 style="margin-bottom: var(--space-md);">Other Ways to Reach Us</h3>

          <div style="display: flex; flex-direction: column; gap: var(--space-md);">
            <div style="display: flex; gap: var(--space-sm); align-items: start;">
              <div style="color: var(--color-deep-forest); flex-shrink: 0;">{% render 'icon', name: 'mail' %}</div>
              <div>
                <h4 style="font-size: 0.9375rem; margin-bottom: 0.25rem;">Email</h4>
                <a href="mailto:hello@flexiblebehaviors.com" style="font-size: 0.9375rem;">hello@flexiblebehaviors.com</a>
              </div>
            </div>

            <div style="display: flex; gap: var(--space-sm); align-items: start;">
              <div style="color: var(--color-deep-forest); flex-shrink: 0;">{% render 'icon', name: 'instagram' %}</div>
              <div>
                <h4 style="font-size: 0.9375rem; margin-bottom: 0.25rem;">Social</h4>
                <p style="font-size: 0.9375rem; margin: 0;">Follow us on Instagram and Facebook for tips, new products, and community stories.</p>
              </div>
            </div>

            <div style="display: flex; gap: var(--space-sm); align-items: start;">
              <div style="color: var(--color-deep-forest); flex-shrink: 0;">{% render 'icon', name: 'truck' %}</div>
              <div>
                <h4 style="font-size: 0.9375rem; margin-bottom: 0.25rem;">Response Time</h4>
                <p style="font-size: 0.9375rem; margin: 0;">We typically respond within 24â€“48 hours on business days.</p>
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>
  </div>
</section>
